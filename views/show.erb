<div class="my-5">
<h3>
  <%= @memo[:title] %>
</h3>
<p>
  <%= @memo[:text] %>
</p>
</div>
<div class="d-flex">
  <a href="/memos/<%= @id %>/edit" class="btn btn-secondary">変更</a>
  <form action="/memos/<%= @id %>" method="POST">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger mx-2" value="削除">
  </form>
</div>
